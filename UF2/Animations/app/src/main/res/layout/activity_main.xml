<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainContainer"
    >

    <ImageView
        android:id="@+id/imvSubZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sprite_idle"/>

    <LinearLayout
        android:id="@+id/llyTerra"
        android:persistentDrawingCache="animation|scrolling"
        android:layoutAnimation="@anim/terra_layout_anim"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="@drawable/terra_pattern"
        app:layout_constraintTop_toBottomOf="@+id/imvSubZero"></LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="HIT!"
        android:onClick="onHit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>